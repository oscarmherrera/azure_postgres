{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageSKU": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ],
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "The type of replication to use for the storage account."
      }
    },
    "etcdSiteLocations": {
        "type": "array",
        "defaultValue": [
            "East US",
            "Central US",
            "West US"
        ],
        "metadata": {
            "description": "Etcd Locations"
        }
    },
    "etcdRegionIP": {
        "type": "array",
        "defaultValue": [
            "10.10.5.100",
            "10.11.5.100",
            "10.12.5.100"
        ],
        "metadata": {
            "description": "Etcd Locations"
        }
    },
    "etcdRegionSubnet": {
        "type": "array",
        "defaultValue": [
            "10.10.5.0/24",
            "10.11.5.0/24",
            "10.12.5.0/24"
        ],
        "metadata": {
            "description": "Etcd Locations"
        }
    },      
    "storageNamePrefix": {
      "type": "string",
      "maxLength": 13,
      "defaultValue": "ha1postgres",
      "metadata": {
        "description": "The value to use for starting the storage account name. Use only lowercase letters and numbers."
      }
    },
    "adminUsername": {
        "type": "string",
        "defaultValue": "azureuser",
        "metadata": {
          "description": "Admin username"
        }
    },
    "adminPassword": {
        "type": "securestring",
        "metadata": {
          "description": "Admin password"
        }
    },
    "numberOfEtcdInstances": {
        "type": "int",
        "defaultValue": 3,
        "metadata": {
            "description" : "The total number of etcd VMs."
        }
    }
  },
  "variables": {
    "storageName": "[concat(toLower(parameters('storageNamePrefix')), uniqueString(resourceGroup().id))]",
    "nicName": "etcdNic",
    "vnetName": "etcdVNet",
    "subnetName": "etcdSubnet",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',variables('vnetName'))]",
    "vnetID0": "[resourceId('Microsoft.Network/virtualNetworks',concat(variables('vnetName'),'0'))]",
    "vnetID1": "[resourceId('Microsoft.Network/virtualNetworks',concat(variables('vnetName'),'1'))]",
    "vnetID2": "[resourceId('Microsoft.Network/virtualNetworks',concat(variables('vnetName'),'2'))]"
  },
  "resources": [
    {
      "name": "[variables('storageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('storageSKU')]"
      },
      "kind": "Storage",
      "location": "Central US",
      "tags": {},
      "properties": {}
    },
    {
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[concat(variables('vnetName'), copyindex())]",
        "apiVersion": "2016-03-30",
        "location": "[parameters('etcdSiteLocations')[copyindex()]]",
        "copy": {
            "name": "virtualNetworksLoop", 
            "count": "[parameters('numberOfEtcdInstances')]"
          },
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
                "[parameters('etcdRegionSubnet')[copyindex()]]"
            ]
          },
          "dhcpOptions": {
            "dnsServers": []
          },
          "subnets": [
            {
              "name": "[variables('subnetName')]",
              "properties": {
                "addressPrefix": "[parameters('etcdRegionSubnet')[copyindex()]]"
              }
            }
          ]
        }
    },
   
    {
        "apiVersion": "2016-06-01",
        "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
        "name": "[concat(variables('vnetName'),0,'/Link',variables('vnetName'),1)]",
        "location": "[parameters('etcdSiteLocations')[0]]",
        "dependsOn": [
            "[concat('Microsoft.Network/virtualNetworks/', variables('vnetName'),0)]",
            "[concat('Microsoft.Network/virtualNetworks/', variables('vnetName'),1)]"
        ],
        "comments": "This is the peering from vNet 0 to vNet 1",
        "properties": {
            "allowVirtualNetworkAccess": "true",
            "allowForwardedTraffic": "false",
            "allowGatewayTransit": "false",
            "useRemoteGateways": "false",
            "remoteVirtualNetwork": {
                "id": "[variables('vnetID1')]"
            }
        }
    },
    {
        "apiVersion": "2016-06-01",
        "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
        "name": "[concat(variables('vnetName'),1,'/Link',variables('vnetName'),0)]",
        "location": "[parameters('etcdSiteLocations')[0]]",
        "dependsOn": [
            "[concat('Microsoft.Network/virtualNetworks/', variables('vnetName'),0)]",
            "[concat('Microsoft.Network/virtualNetworks/', variables('vnetName'),1)]"
        ],
        "comments": "This is the peering from vNet 0 to vNet 1",
        "properties": {
            "allowVirtualNetworkAccess": "true",
            "allowForwardedTraffic": "false",
            "allowGatewayTransit": "false",
            "useRemoteGateways": "false",
            "remoteVirtualNetwork": {
                "id": "[variables('vnetID0')]"
            }
        }
    },
    {
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[concat(variables('nicName'), copyindex())]",
        "apiVersion": "2016-03-30",
        "location": "[parameters('etcdSiteLocations')[copyindex()]]",
        "copy": {
            "name": "networkInterfaceLoop", 
            "count": "[parameters('numberOfEtcdInstances')]"
          },
        "dependsOn": [
          "[resourceId('Microsoft.Network/virtualNetworks', concat(variables('vnetName'), copyindex()))]"
        ],
        "properties": {
          "ipConfigurations": [
            {
              "name": "IPConfig-etcd",
              "properties": {
                "privateIPAddress": "[parameters('etcdRegionIP')[copyindex()]]",
                "privateIPAllocationMethod": "Static",
                "subnet": {
                    "id": "[concat(variables('vnetID'),copyindex(),'/subnets/',variables('subnetName'))]"
                }
              }
            }
          ]
        }
      },
    { 
      "apiVersion": "2016-04-30-preview", 
      "type": "Microsoft.Compute/virtualMachines", 
      "name": "[concat('etcd-vm-', copyindex())]", 
      "location": "[parameters('etcdSiteLocations')[copyindex()]]",
      "copy": {
        "name": "virtualMachineLoop", 
        "count": "[parameters('numberOfEtcdInstances')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('nicName'), copyindex()))]" 
      ], 
      "properties": { 
        "hardwareProfile": { 
          "vmSize": "Basic_A1" 
        }, 
        "osProfile": { 
          "computername": "[concat('etcd-   VM', copyindex())]", 
          "adminUsername": "[parameters('adminUsername')]", 
          "adminPassword": "[parameters('adminPassword')]" 
        }, 
        "storageProfile": { 
            "imageReference": {
                "publisher": "credativ",
                "offer": "Debian",
                "sku": "8",
                "version": "latest"
              },

          "osDisk": { 
            "name": "[concat('etcdOSDisk', copyindex())]",
            "caching": "ReadWrite", 
            "createOption": "FromImage" 
          },
          "dataDisks": [
            {
              "name": "[concat('etcdDataDisk', copyindex())]",
              "diskSizeGB": 5,
              "lun": 0,
              "createOption": "Empty"
            }
          ]
        },
          "networkProfile": { 
            "networkInterfaces": [ 
               { 
               "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('nicName'), copyindex()))]",
               "properties": {
                   "primary": true
                   } 
               } 
           ] 
           }   
        }
    
    }

  ],
  "outputs": {  }
}